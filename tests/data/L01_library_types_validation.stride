use DesktopAudio version 1.0

module Sum {
    ports: [
        mainInputPort InputsProperty {
            name:       "inputs"
            block:      Inputs
        },
        mainOutputPort OutputsProperty {
            name:       "outputs"
            block:       Output
        },
        propertyInputPort SizeProperty {
            name:       "size"
            block:       Size
        },
        propertyInputPort ResetProperty {
            name:       "reset"
            block:      Reset
        }
    ]
    blocks:  [
        constant Size { value: 2 },
        trigger Reset {},
#       signal Inputs [Size] {
#           type:   [ 'Stream Real', 'Stream Integer' ]
#           default :       [ 0.0 , 0 ]
#           rate:           streamRate
#           domain:         streamDomain
#           reset:          Reset
#       },
        signal Output {
#           type:           [ 'Stream Real', 'Stream Integer' ]
            default :       [ 0.0 , 0 ]
#           rate:           streamRate
            },
        reaction Adder {
		ports: [
		mainOutputPort OutputsProperty {
            name:       "outputs"
            block:       Sum
        }
		]
            blocks:  [
                signal Index {
                        default:        1
                        #domain:         streamDomain
                        #reset:          AdderReset
                },
                signal Sum      {
#                                        type:           [ 'Stream Real', 'Stream Integer' ]
                        default:        [ 0.0 , 0 ]
                        #domain:         streamDomain
                        #reset:          AdderReset
                }
            ]
            streams:        [
#               Inputs[Index] + Sum >> Sum;
                Index + 1 >> Index;
#               [ Index , Size ] >> Greater () >> Terminate;
            ]
        }
    ]
    streams:   [
        Adder () >> Output;
    ]     
}
