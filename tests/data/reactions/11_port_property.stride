use DesktopAudio version 1.0

module PortProperty {
    ports:      [
        mainOutputPort OutputPort {
            block:      Output
        }
        mainInputPort InputPort {
            block:      Input
        }
    ]
    blocks:     [
        reaction React { 
            streams: [Input * InputPort.rate >> Output;]
        }
    ]
    streams: [
	[Input, 0] >> Greater() >> React();
    ]
}

AudioIn[0]>> PortProperty() >>  AudioOut[0];