use DesktopAudio version 1.0


module Test {
	ports: [
		mainOutputPort OutputPort {
			block: Output
		}
		mainInputPort InputPort {
			block: Input
		}
		propertyInputPort VarPort {
			name:"var"
			block: Var
		}
	]
	blocks: [
		reaction UsesVar {
			streams: [
				Var + 0.001 >> Var;
			]
		}
		signal Output[2] {}
	]
	streams: [
		[Input, 0] >> Greater() >> UsesVar();
		Input * Var >> Output[1];
		Var >> Output[2];
	]
}

AudioIn[0] >> Test() >> AudioOut;
