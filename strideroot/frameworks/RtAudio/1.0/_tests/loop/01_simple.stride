use DesktopAudio version 1.0

signal Accum {}

loop Loop {
	ports: [
		mainInputPort InputPort {
			block: Input
		}
		mainOutputPort OutputPort {
			block: Output
		}
	]
	blocks: [
		signal Input[InputPort.size] {}
		signal Output {default: 0}
		signal Index { default: 0 reset: Reset }
		switch Done {}
		trigger Reset {}
	]
	onExecution: Reset
	terminateWhen: Done
	streams: [
		Input [ Index ] + Output >> Output ;
		Index + 1 >> Index ;
		[ Index , InputPort.size ] >> Equal() >> Done ;
		
	]
}

signal List[20] { default: 1 }

List >> Loop() >> AudioOut[0];
